{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "jest"],
  "rules": {
    "quotes": [1, "single"],
    "react/display-name": 0,
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0
  }
}
